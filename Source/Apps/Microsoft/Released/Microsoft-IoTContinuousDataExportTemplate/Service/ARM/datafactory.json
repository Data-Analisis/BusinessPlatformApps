              }
            ],
            "typeProperties": {
              "tableName": "[concat(variables('leftBracket'), 'stage].[PropertyDefinitions]')]"
            }
          },
          "dependsOn": [
            "[variables('factoryName')]",
            "[concat(variables('factoryId'), '/linkedServices/SQL')]"
          ]
        },
