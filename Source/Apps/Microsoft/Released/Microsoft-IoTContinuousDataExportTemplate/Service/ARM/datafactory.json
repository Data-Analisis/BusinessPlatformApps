          "type": "Microsoft.DataFactory/factories/datasets",
          "apiVersion": "2017-09-01-preview",
          "properties": {
            "linkedServiceName": {
              "referenceName": "SQL",
              "type": "LinkedServiceReference"
            },
            "type": "AzureSqlTable",
            "structure": [
              {
                "name": "id",
                "type": "Int32"
              },
              {
                "name": "deviceId",
                "type": "String"
              },
              {
                "name": "modelId",
                "type": "String"
              },
              {
                "name": "modelVersion",
                "type": "String"
              },
              {
                "name": "name",
                "type": "String"
              },
              {
                "name": "description",
                "type": "String"
              },
              {
                "name": "simulated",
