                "type": "String"
              },
              {
                "name": "lastUpdated",
                "type": "DateTime"
              },
              {
                "name": "field",
                "type": "String"
              },
              {
                "name": "kind",
                "type": "String"
              },
              {
                "name": "numericValue",
                "type": "Decimal"
              },
              {
                "name": "stringValue",
                "type": "String"
              },
              {
                "name": "booleanValue",
                "type": "Boolean"
              }
            ],
            "typeProperties": {
              "tableName": "[concat(variables('leftBracket'), 'stage].[Properties]')]"
            }
          },
          "dependsOn": [
            "[variables('factoryName')]",
            "[concat(variables('factoryId'), '/linkedServices/SQL')]"
          ]
        },
        {
          "name": "[concat(variables('factoryName'), '/Stage Measurements')]",
          "type": "Microsoft.DataFactory/factories/datasets",
          "apiVersion": "2017-09-01-preview",
          "properties": {
            "linkedServiceName": {
              "referenceName": "SQL",
              "type": "LinkedServiceReference"
            },
            "type": "AzureSqlTable",
            "structure": [
              {
                "name": "id",
                "type": "Int32"
              },
              {
                "name": "deviceId",
                "type": "String"
              },
              {
                "name": "timestamp",
                "type": "DateTime"
              },
              {
                "name": "field",
                "type": "String"
              },
              {
                "name": "numericValue",
                "type": "Decimal"
              },
              {
                "name": "stringValue",
                "type": "String"
              },
              {
                "name": "booleanValue",
                "type": "Boolean"
              }
            ],
            "typeProperties": {
              "tableName": "[concat(variables('leftBracket'), 'stage].[Measurements]')]"
            }
          },
          "dependsOn": [
            "[variables('factoryName')]",
            "[concat(variables('factoryId'), '/linkedServices/SQL')]"
          ]
        },
        {
          "name": "[concat(variables('factoryName'), '/Stage PropertyDefinitions')]",
          "type": "Microsoft.DataFactory/factories/datasets",
          "apiVersion": "2017-09-01-preview",
          "properties": {
            "linkedServiceName": {
              "referenceName": "SQL",
              "type": "LinkedServiceReference"
            },
            "type": "AzureSqlTable",
            "structure": [
              {
                "name": "id",
                "type": "Int32"
              },
              {
                "name": "modelId",
                "type": "String"
              },
              {
                "name": "modelVersion",
                "type": "String"
              },
              {
                "name": "field",
                "type": "String"
              },
              {
                "name": "kind",
                "type": "String"
              },
              {
                "name": "dataType",
